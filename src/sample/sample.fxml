<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane onMouseClicked="#showName" prefHeight="321.0" prefWidth="378.0" GridPane.columnIndex="1">
         <children>
            <Button fx:id="btnSignIn" layoutX="78.0" layoutY="230.0" mnemonicParsing="false" onMouseClicked="#showName" text="Sign In" />
            <Label fx:id="lblName" layoutX="205.0" layoutY="234.0" prefHeight="17.0" prefWidth="84.0" />
            <TextField fx:id="txtName" layoutX="121.0" layoutY="76.0" promptText="Enter" />
            <Label fx:id="lblWelcome" layoutX="30.0" layoutY="24.0" prefHeight="39.0" prefWidth="98.0" text="Welcome">
               <font>
                  <Font name="Broadway" size="18.0" />
               </font></Label>
            <Label fx:id="lblUserName" layoutX="37.0" layoutY="80.0" text="User Name:" />
            <Label fx:id="lblPassword" layoutX="41.0" layoutY="123.0" text="Password:" />
            <TextField fx:id="txtPassword" layoutX="121.0" layoutY="119.0" promptText="Enter" />
         </children>
      </Pane>
   </children>
